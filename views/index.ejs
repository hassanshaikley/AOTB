<!DOCTYPE html>

<html lang="en">

  <head>
    <title>AMARA</title>
    <meta charset="utf-8">
    <meta name="author" content="hassooni">
    <meta name="description" content="yolo">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
    <meta name="viewport" content="width=device-width; initial-scale=1.0">
    <link rel="stylesheet" href="styles/game.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->


  </head>

  <body>
    <%if  (authenticated ) {%>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    <% } else{ %>
        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span> Login</a>
    <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Signup</a>
    <% } %>
  
    <div id="gameCanvasMargin">
    <canvas id="gameCanvas" height=500 width=800></canvas>
        <div id="chat_outer">
            <div id="chat">
            </div>
                                                                                                                                                                
       
    <input type="text" name="text" id="text">
    <input type="button" name="send" id="send" value="send">
  </div>
    <script src="scripts/assetLoader.js"></script>
    <script src="scripts/requestAnimationFrame.js"></script>
    <script src="scripts/Player.js"></script>
    <script src="scripts/game.js"></script>
    <script src="scripts/Keys.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      // Initialise the game
      PORT = <%=process.env.PORT || 5000%>;
      init();
     animate();
    
    var chat_scroll = document.getElementById("chat");
    chat_scroll.scrollTop = chat_scroll.scrollHeight;
     socket.on('message', function (data) {
          $('#chat').append(data.text + '<br />');
              chat_scroll.scrollTop = chat_scroll.scrollHeight;

        });
      
        $('#send').click(function () {
          socket.emit('sendMessage', { text: $('#text').val() });
          $('text').val('');
        });

    </script>
  </body>
</html>
